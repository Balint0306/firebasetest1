# Enable URL Rewriting
RewriteEngine On

# Set the default directory file to index.php
DirectoryIndex index.php

# --- PHP Handler Configuration ---
# This ensures .php files are processed by the PHP interpreter.
<FilesMatch \.php$>
    SetHandler application/x-httpd-php
</FilesMatch>

# --- Basic Routing ---
# If a requested file or directory does not exist, 
# forward the request to index.php to handle it.
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?/$1 [L]
